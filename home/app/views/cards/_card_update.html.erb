

<div class="modal fade" id="myModal_update" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button p-5 mb-2 bg-primary text-white" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Add card</h4>
      </div>
      <div class="modal-body">
        <%= form_for card do |f| %>
          <div class="form-group">
            <label for="usr">Name:</label>
            <%= f.text_field :title ,class: 'form-control', placeholder: "Title"%><br>
            <label for="usr">Description:</label>
            <%= f.text_area :description ,class: 'form-control', placeholder: "Card description"  %><br>
            <label for="usr">Date:</label>
            <%= f.datetime_select :date,class: 'form-control' %><br>
            <%= f.hidden_field :list_id%>
          </div>
          <%= f.submit 'Update or create' %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>