<div class="container">

  <h1>Home#index</h1>
  <p>Find me in app/views/home/index.html.erb</p>
  <%= link_to 'Sign up', new_user_registration_path %>
  <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>

  <% if user_signed_in? %>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>


    <div class="container board ">
      <% Dashboard.all.each do |dashboard| %>
        <div class = "column card-bloc well " data-toggle="collapse" data-target="#anchor<%=  dashboard.id%>" ><%= dashboard.title %>
          <div id="anchor<%=dashboard.id%>" class="collapse">
            <div class="btn-group row">
              <%= link_to dashboard_path(dashboard), data: {:confirm => 'Are you sure?'}, :method => :delete do %>
                <button type="button" class="btn btn-warning btn-xs">
                  Destroy
                </button>
              <% end %>
              <%= link_to edit_dashboard_path(dashboard), remote: true do %>
                <button type="button" class="btn btn-primary btn-xs">
                  Update
                </button>
               <% end %>
            </div>
            <div class="row" style="margin-top: 3px">
              <%= link_to dashboard_path(dashboard) do %>
                <button type="button" class="btn btn-success btn-xs">
                  Go to Dasboard
                </button>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Trigger the modal with a button -->
      <%= link_to new_dashboard_path, remote: true do %>
       <button type="button" class="btn btn-info btn-md " style="margin-top:15px">
        <span class="glyphicon glyphicon-plus  ">Add</span>
       </button>
      <% end %>
    </div>


<% end %>
</div>
